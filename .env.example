# Environment Configuration Template
# Copy this file to .env and update the values as needed

NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL=./data/database.sqlite

# CORS Configuration (for frontend integration)
CORS_ORIGIN=http://localhost:5173

#CORS_ORIGIN=http://localhost:3001?

# API Configuration
API_PREFIX=/api

# File Upload Configuration
# Maximum file size for CV uploads (in bytes)
MAX_CV_FILE_SIZE=10485760
# Directory for CV file storage
CV_UPLOAD_DIR=./uploads/cvs
# Allowed file extensions (comma-separated, document formats only)
ALLOWED_CV_EXTENSIONS=doc,docx,pdf
# Allowed MIME types (comma-separated, document formats only)
ALLOWED_CV_MIME_TYPES=application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/msword,application/pdf

# Authentication Configuration
# Generate a secure random secret key (e.g., using: openssl rand -base64 32)
BETTER_AUTH_SECRET=
BETTER_AUTH_URL=http://localhost:3001
TRUSTED_ORIGINS=http://localhost:3000,http://localhost:3001